<?xml version="1.0"?>

<launch>
  <!-- Set use of simulation time to true -->
  <param name="use_sim_time" value="true" />

  <!-- send the robot XML to param server -->
  <param name="robot_description" command="$(find xacro)/xacro.py '$(find thor_mang_description)/robots/$(optenv THOR_ROBOT_TYPE thor_mang)_tud_simple.urdf.xacro'" />

  <!-- push robot_description to factory and spawn robot in gazebo -->
  <node name="spawn_robot" pkg="gazebo_ros" type="spawn_model"
    args="-param robot_description
          -urdf
          -model robot_description
          -J head_pan 0
          -J head_tilt 0
          -J l_ankle_pitch 0.607399277
          -J l_ankle_roll -0.070400015
          -J l_elbow -1.513516583
          -J l_hip_pitch -0.789868906
          -J l_hip_roll -0.074598838
          -J l_hip_yaw 0.011298883
          -J l_knee 1.189302819
          -J l_shoulder_pitch 0.75316509
          -J l_shoulder_roll -0.275504491
          -J l_shoulder_yaw 0.0211927
          -J l_wrist_roll 0
          -J l_wrist_yaw1 -0.249898588
          -J l_wrist_yaw2 0.816801445
          -J r_ankle_pitch -0.607400579
          -J r_ankle_roll 0.070400076
          -J r_elbow 1.513511546
          -J r_hip_pitch 0.78992388
          -J r_hip_roll 0.074598608
          -J r_hip_yaw -0.011301546
          -J r_knee -1.18929649
          -J r_shoulder_pitch -0.75318944
          -J r_shoulder_roll 0.275497647
          -J r_shoulder_yaw -0.02119781
          -J r_wrist_roll 0
          -J r_wrist_yaw1 0.249900152
          -J r_wrist_yaw2 -0.816799906
          -J waist_lidar 0
          -J waist_pan 0
          -J waist_tilt 0
          -x 0
          -y 0
          -z 0.7876
          -R 0
          -P 0.20896
          -Y 0"
    respawn="false" output="screen" />

  <!-- start robot state publisher -->
  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen" >
    <param name="publish_frequency" type="double" value="50.0" />
    <remap from="joint_states" to="/thor_mang/joint_states" />
  </node>
  
  <node name="relay_head_image" pkg="topic_tools" type="relay" args="/head_cam/image_raw /camera/image_raw" />
  <node name="relay_head_camera_info" pkg="topic_tools" type="relay" args="/head_cam/camera_info /camera/camera_info" />  
  
</launch>
